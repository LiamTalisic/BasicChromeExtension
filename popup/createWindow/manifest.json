{
    "manifest_version": 3,
    "name": "Resizable Chrome Extension",
    "version": "1.0",
    "description": "A simple resizable popup for a Chrome extension.",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "permissions": ["windows"]
}
